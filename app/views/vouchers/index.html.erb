<h1>Listing vouchers</h1>

<%= infotab_header(%w(Code Active Amount Comments Options)) %>
<% @vouchers.each do |voucher| %>

<tr>
  <td><%=h voucher.code %></td>
  <td><%=h voucher.active %></td>
  <td><%=h voucher.amount %></td>
  <td><%=h voucher.comments %></td>
  <td>
    <%= link_to 'Show', voucher %>
    <%= link_to 'Edit', edit_voucher_path(voucher) %>
    <%= link_to 'Destroy', voucher, 'data-confirm' => 'Are you sure?', :method => :delete %>
  </td>
</tr>
<% end %>
</table> 

<br />

<%= link_to 'New voucher', new_voucher_path %>