<%= my_error_messages_for :vacation %>

<%= form_for(@vacation, :url=>{:action=>:create, :user_id=>@user.id}) do |f| %>
  <p>
    <b>Beginning</b><br />
    <%= f.datetime_select :beginning %>
  </p>

  <p>
    <b>Ending</b><br />
    <%= f.datetime_select :ending %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to( _('List of vacations'), :action=>:index) %> |
<% if @user == @auser %>
	<%= link_to(_('Back to your account'), {:controller=>:users, :action=>:my_profile}) %>
<% else %>
	<%= link_to(_('Back to profile page'), {:controller=>:users, :action=>:show, :id=>@auser}) %>
<% end %>
