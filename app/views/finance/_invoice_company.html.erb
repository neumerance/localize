<% if @show_edit %>
  <%= form_tag({:action=>:edit_invoice_company, :id=>invoice_company.id}, :remote => true) do %>
    <p><%= text_area_tag(:company, invoice_company.company, {:cols=>70, :rows=>5, maxlength: COMMON_NOTE} ) %></p>
  <%= submit_tag('Save', data: { disable_with: 'Saving' }) %>
  <% end %>

  <%= form_tag({:action=>:edit_invoice_company, :id=>invoice_company.id, :req=>:del}, :remote => true) do %>
    <%= submit_tag('Revert', data: { disable_with: 'Reverting' }) %>
  <% end %>

  <%= form_tag({:action=>:edit_invoice_company, :id=>invoice_company.id, :req=>:hide}, :remote => true) do %>
    <%= submit_tag('Cancel', data: { disable_with: 'Cancel' }) %>
  <% end %>

<% else %>
  <% begin %>
    <p><%= pre_format(invoice_company.company || invoice_company.default_company ) %></p>
  <% rescue %>
  <% end %>

  <div class="noprint">
    <%= form_tag({:action=>:edit_invoice_company, :id=>invoice_company.id, :req=>:show}, :remote => true) do %>
      <br /><%= submit_tag('Edit', data: { disable_with: 'Edit' }) %>
    <% end %>
  </div>

<% end %>