<h1>New site_notice</h1>

<%= my_error_messages_for :site_notice %>

<%= form_for(@site_notice) do |f| %>
  <p>
    <label><%= f.radio_button :active, 1, checked: true %> Active</label>
  </p>
  <p>
    <label><%= f.radio_button :active, 0 %> Inactive</label>
  </p>
  <p>
    <b>Start time</b><br />
    <%= f.datetime_select :start_time %>
  </p>

  <p>
    <b>End time</b><br />
    <%= f.datetime_select :end_time %>
  </p>

  <p>
    <b>Txt</b><br />
    <%= f.text_area :txt, maxlength: COMMON_NOTE, style: 'width: 40%; height: 300px' %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', site_notices_path %>
