<% if reminder_event_link(reminder, @user) %>
<div id="reminder<%= reminder.id %>" rel='<%= reminder.event %>'>
	<% if reminder.user_can_delete %>
		<%= form_tag(reminder_url(reminder), :method=>:delete, "data-confirm" => _('Are you sure you want to delete this reminder?'), :remote => true) do %>
			<%= image_submit_tag 'icons/x16_16.png', :class=>'left_16' %>
		<% end %>
	<% else %>
    <%= image_tag 'icons/important_16_gray.png', class: 'left_16', width: 16, height: 16, alt: 'important', style: '', border: 0 %>
	<% end %>
  <%= reminder_event_link(reminder, @user) %>
</div>
<% end %>